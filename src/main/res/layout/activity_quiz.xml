<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quiz.QuizActivity">


    <Button
        android:id="@+id/button_start_quiz"
        android:layout_width="208dp"
        android:layout_height="55dp"
        android:layout_marginBottom="312dp"
        android:background="@color/design_default_color_secondary_variant"
        android:text="Iniciar Quiz"
        android:textColor="#fff"
        android:textSize="18dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quiz_start_text"
        app:layout_constraintVertical_bias="0.356" />

    <TextView
        android:id="@+id/quiz_start_text"
        android:layout_width="312dp"
        android:layout_height="131dp"
        android:layout_marginTop="44dp"
        android:gravity="center_horizontal"
        android:padding="20dp"
        android:text="Clique no botão abaixo para iniciar o Quiz"
        android:textAlignment="center"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Clique no botão abaixo para iniciar o Quiz" />

    <TextView
        android:id="@+id/quiz_start_text2"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="1dp"
        android:text="As questões são randômicas armazendas em um banco de dados do aplicavo. Você terá 1 minuto para responder cada questão"
        android:textAlignment="center"
        android:textSize="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_start_quiz"
        app:layout_constraintVertical_bias="0.14"
        tools:text="Clique no botão abaixo para iniciar o Quiz" />


</androidx.constraintlayout.widget.ConstraintLayout>